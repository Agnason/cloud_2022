<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloud.june.cloudapplication.ChatController">
    <AnchorPane fx:id="authPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2e3348;">
        <children>
            <AnchorPane layoutY="108.0" prefHeight="286.0" prefWidth="700.0" style="-fx-background-color: #fafafa;">
                <children>
                    <TextField fx:id="loginField" layoutX="180.0" layoutY="64.0" prefHeight="35.0" prefWidth="339.0" promptText="Логин" style="-fx-background-color: #fafafa; -fx-border-color: silver; -fx-border-radius: 5;">
                        <font>
                            <Font name="Nirmala UI" size="16.0" />
                        </font>
                    </TextField>
                    <PasswordField fx:id="passwordField" layoutX="180.0" layoutY="118.0" prefHeight="35.0" prefWidth="339.0" promptText="Пароль" style="-fx-background-color: #fafafa; -fx-border-color: silver; -fx-border-radius: 5;">
                        <font>
                            <Font name="Nirmala UI" size="16.0" />
                        </font>
                    </PasswordField>
                    <Button layoutX="276.0" layoutY="189.0" mnemonicParsing="false" onAction="#tryToAuth" prefHeight="46.0" prefWidth="148.0" style="-fx-background-color: #F39C63;" text="ВОЙТИ" textFill="WHITE">
                        <font>
                            <Font name="Nirmala UI" size="21.0" />
                        </font>
                    </Button>
                </children>
            </AnchorPane>
            <Label layoutX="247.0" layoutY="20.0" text="CloudNAS" textFill="WHITE">
                <font>
                    <Font name="Mistral" size="51.0" />
                </font>
            </Label>
            <Button fx:id="regBtn" layoutX="502.0" layoutY="20.0" mnemonicParsing="false" onAction="#tryToReg" prefHeight="41.0" prefWidth="183.0" style="-fx-background-color: #F39C63;" text="Зарегистрироваться" textFill="WHITE">
                <font>
                    <Font name="Nirmala UI" size="17.0" />
                </font>
            </Button>
        </children>
    </AnchorPane>

    <HBox>
        <TextField fx:id="clientInfo" editable="false" promptText="КЛИЕНТ" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox fx:id="cloudPanel">
        <VBox>
            <HBox>
                <ComboBox fx:id="disksBox" onAction="#selectDiskAction" />
                <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" />
                <Button onAction="#btnPathUpRequest" text="Up" />
            </HBox>
            <TableView fx:id="clientView" VBox.vgrow="ALWAYS" />
        </VBox>
        <VBox>
            <HBox>
                <TextField fx:id="pathFieldServer" editable="false" HBox.hgrow="ALWAYS" />
                <Button onAction="#btnPathUpRequestServer" text="Up" />
            </HBox>
            <ListView fx:id="serverView" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />
        </VBox>

    </HBox>

    <HBox fx:id="btnPanel" spacing="5.0">
        <Button focusTraversable="false" maxWidth="Infinity" onAction="#upload" text="ToServer" HBox.hgrow="ALWAYS" />
        <Button focusTraversable="false" maxWidth="Infinity" onAction="#download" text="FromServer" HBox.hgrow="ALWAYS" />
        <Button focusTraversable="false" maxWidth="Infinity" onAction="#tryToDelete" text="Delete" HBox.hgrow="ALWAYS" />
        <Button focusTraversable="false" maxWidth="Infinity" onAction="#btnExitAction" text="Exit" HBox.hgrow="ALWAYS" />
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </HBox>
</VBox>
